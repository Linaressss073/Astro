            <option value="+55">ğŸ‡§ğŸ‡· +55 (Brasil)</option>
          </select>
          <input id="register_celular" type="text" placeholder="NÃºmero celular" required class="w-full p-2 border rounded-r" />
        </div>

        <input id="register_correo" type="email" placeholder="Correo" required class="w-full p-2 border rounded mb-2" />
        <input id="register_password" type="password" placeholder="ContraseÃ±a" required class="w-full p-2 border rounded mb-2" />

