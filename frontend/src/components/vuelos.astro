---
const destinos = [
  "Bogotá", "Medellín", "Cartagena", "Cali", "Barranquilla",
  "Pereira", "Santa Marta", "Bucaramanga", "San Andrés", "Villavicencio"
];

// Hacer la función global para que el botón pueda acceder a ella
if (typeof window !== "undefined") {
  window.buscarVuelos = () => {
    const origen = document.getElementById("origen").value;
    const destino = document.getElementById("destino").value;
    const fechaSalida = document.getElementById("fechaSalida").value;
    const fechaRegreso = document.getElementById("fechaRegreso").value;

    if (origen === destino) {
      alert("❌ El origen y el destino no pueden ser iguales.");
      return;
    }

    if (!fechaSalida || !fechaRegreso) {
      alert("❌ Debes seleccionar ambas fechas.");
      return;
    }

    // Generar costo aleatorio
    const costo = Math.floor(Math.random() * (900 - 300) + 300);

    // Redirigir a la página de reserva
    window.location.href = `/reserva?origen=${origen}&destino=${destino}&fechaSalida=${fechaSalida}&fechaRegreso=${fechaRegreso}&costo=${costo}`;
  };
}
---

<style>
  .container {
    max-width: 800px;
    margin: 40px auto;
    padding: 24px;
    border: 2px solid #2A0A60;
    border-radius: 16px;
    background: #FAF9FF;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  h2 {
    text-align: center;
    color: #2A0A60;
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    margin-bottom: 24px;
  }

  label {
    font-weight: bold;
    color: #2A0A60;
  }

  select, input {
    padding: 10px;
    border: 2px solid #2A0A60;
    border-radius: 8px;
    font-size: 16px;
    outline: none;
    width: 100%;
  }

  .submit-btn {
    width: 100%;
    padding: 12px;
    background: #5A32A3;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 18px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .submit-btn:hover {
    background: #2A0A60;
  }
</style>

<div class="container">
  <h2>Reserva tu vuelo ✈️</h2>

  <div class="form-grid">
    <!-- Origen -->
    <div>
      <label for="origen">Origen:</label>
      <select id="origen">
        {destinos.map((ciudad) => (
          <option value={ciudad}>{ciudad}</option>
        ))}
      </select>
    </div>

    <!-- Destino -->
    <div>
      <label for="destino">Destino:</label>
      <select id="destino">
        {destinos.map((ciudad) => (
          <option value={ciudad}>{ciudad}</option>
        ))}
      </select>
    </div>

    <!-- Fecha de salida -->
    <div>
      <label for="fechaSalida">Fecha de salida:</label>
      <input id="fechaSalida" type="date" />
    </div>

    <!-- Fecha de regreso -->
    <div>
      <label for="fechaRegreso">Fecha de regreso:</label>
      <input id="fechaRegreso" type="date" />
    </div>
  </div>

  <button class="submit-btn" onclick="buscarVuelos()">Buscar vuelos</button>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hoy = new Date().toISOString().split("T")[0];
    document.getElementById("fechaSalida").setAttribute("min", hoy);
    document.getElementById("fechaRegreso").setAttribute("min", hoy);
  });
</script>
