---
import { Tick } from "@/components/ui/icons";

const { plan } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-gray-400">{plan.name}</h4>

      <!-- Muestra precios dependiendo de si es un objeto o una cadena -->
      {typeof plan.price === "object" ? (
        <div>
          <p class="mt-3 text-4xl font-bold text-black md:text-4xl">
            Solo ida: {plan.price.oneWay}
          </p>
          <p class="mt-1 text-2xl font-medium text-gray-500">
            Ida y vuelta: {plan.price.roundTrip}
          </p>
        </div>
      ) : (
        <p class="mt-3 text-4xl font-bold text-black md:text-4xl">
          {plan.price}
        </p>
      )}

    </div>
    
    <ul class="grid mt-8 text-left gap-y-4">
      {plan.features.map((item) => (
        <li class="flex items-start gap-3 text-gray-800">
          <Tick class="w-6 h-6" />
          <span>{item}</span>
        </li>
      ))}
    </ul>
  </div>
</div>
